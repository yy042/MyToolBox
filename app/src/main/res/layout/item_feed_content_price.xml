<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="bottom">
    
    <TextView
        android:id="@+id/tvFeedContentPriceUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥"
        android:textSize="12sp"
        android:textColor="@color/text_price_red"
        />

    <TextView
        android:id="@+id/tvFeedContentPriceInteger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="159"
        android:textColor="@color/text_price_red"
        android:textSize="18sp"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/tvFeedContentPriceDecimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=".22/月"
        android:textColor="@color/text_price_red"
        android:textSize="12sp"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <cn.edu.fzu.mytoolbox.util.StrikeTextView
        android:id="@+id/tvFeedContentOriginalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200金豆"
        android:textSize="12sp"
        app:strike="true"
        android:textColor="@color/text_secondary"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end"
        />

</LinearLayout>