<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <ImageView
        android:id="@+id/marquee_icon"
        android:layout_width="23dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_beans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <cn.edu.fzu.mytoolbox.util.MarqueeTextView
        android:id="@+id/marquee_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="充值奖励"
        android:textColor="#666666"
        android:textSize="13sp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:layout_marginLeft="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/marquee_desc"
        app:layout_constraintStart_toEndOf="@+id/marquee_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/marquee_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+80金豆"
        android:textColor="#fe5561"
        android:textSize="13sp"
        android:layout_marginRight="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/marquee_name"
        app:layout_constraintEnd_toStartOf="@+id/marquee_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/marquee_btn"
        android:layout_width="52dp"
        android:layout_height="22dp"
        android:background="@drawable/bg_btn_red"
        android:gravity="center"
        android:text="兑好物"
        android:textColor="#ffffff"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>