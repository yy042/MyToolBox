<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="17dp"
    android:background="@drawable/bg_label_pink"
    android:paddingHorizontal="6dp">

    <ImageView
        android:id="@+id/ivFeedContentLocationIcon"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_location"
        app:layout_constraintHeight_percent=".6"
        app:layout_constraintVertical_bias=".6"
        android:layout_marginRight="2.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvFeedContentLocationTitle"
        app:layout_constraintTop_toTopOf="@id/tvFeedContentLocationTitle"
        app:layout_constraintBottom_toBottomOf="@id/tvFeedContentLocationTitle" />

    <TextView
        android:id="@+id/tvFeedContentLocationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="福建省 福州市"
        android:textColor="@color/text_price_red"
        android:textSize="11sp"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/ivFeedContentLocationIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
