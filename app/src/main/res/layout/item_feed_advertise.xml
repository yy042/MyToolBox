<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp">

    <com.youth.banner.Banner
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/feedAdvertiseScroller"
        app:banner_indicator_selected_color="@color/indicator_blue"
        app:banner_indicator_normal_color="@color/text_secondary"
        app:banner_indicator_marginBottom="20dp"
        app:banner_indicator_normal_width="4dp"
        app:banner_indicator_selected_width="4dp"/>

</androidx.cardview.widget.CardView>
