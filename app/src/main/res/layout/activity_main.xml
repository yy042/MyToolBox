<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvRvActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. 多种RecyclerView的使用"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:background="@drawable/bg_btn_blue"
        android:padding="20dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/tvRechargeSuccessActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRechargeSuccessActivity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_blue"
        android:padding="20dp"
        android:text="2. 充值成功页面"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvRvActivity"
        app:layout_constraintStart_toStartOf="@+id/tvRvActivity"
        app:layout_constraintTop_toBottomOf="@+id/tvRvActivity" />


</androidx.constraintlayout.widget.ConstraintLayout>